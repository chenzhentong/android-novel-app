<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BookReviewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_red_dark"
        android:fitsSystemWindows="true" android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/book_review_back_book_detail"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/left"
            android:padding="5dp" android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/book_review_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="笔趣小说"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     " />

    </LinearLayout>



        <ListView
            android:id="@+id/book_review_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="80dp">

        </ListView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@android:color/white"
        android:layout_alignParentBottom="true">
        <ImageView

            android:layout_marginTop="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/select"/>
        <EditText
            android:id="@+id/review_content_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入" android:textColorHint="@color/lightGray" />
        <ImageView
            android:id="@+id/publish_review_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/paperplane"/>
    </LinearLayout>

</RelativeLayout>