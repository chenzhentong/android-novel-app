<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RecentViewActivity" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
       android:background="@android:color/holo_red_dark"
        android:layout_marginBottom="10dp" android:fitsSystemWindows="true">
        <ImageView
            android:id="@+id/recent_view_back_mine"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white" android:text="最近浏览"
            android:textSize="16dp"
           />
        <TextView
            android:id="@+id/clear_book_view_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="清空" android:layout_marginRight="10dp"

            android:textSize="14dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_recent_view_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>