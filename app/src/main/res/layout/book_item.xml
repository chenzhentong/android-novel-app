<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/book_item"
    android:layout_width="match_parent"
    android:layout_height="140dp" android:orientation="horizontal">

    <TextView
        android:id="@+id/book_item_cover_title"
        android:layout_width="90dp"
        android:layout_height="120dp"

        android:background="@color/lightGray"
        android:text="小说名字"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        >
    </TextView>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center" android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/book_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小说名字"
            android:textSize="14dp"
            android:textColor="@color/color2E2D2E"
     />
        <TextView
            android:id="@+id/book_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作者"

            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textColor="@color/color666"/>
        <TextView
            android:id="@+id/book_item_lastChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="最新: xxx"
            android:textSize="11dp"
            android:textColor="@color/colorACA9AC"/>
    </LinearLayout>

</LinearLayout>
