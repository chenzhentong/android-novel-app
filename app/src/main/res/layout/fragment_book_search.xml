<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
    tools:context=".fragment.BookSearchFragment" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索历史"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"/>
            <TextView
                android:id="@+id/clear_search_history_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="清空历史"
                android:textSize="14dp"
                android:textColor="@color/color8B8A8D"
                />
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/book_search_tag_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

